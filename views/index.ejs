<%- include ("./partials/header.ejs") %>
<body>
  <div class="container" style="margin-top: 40px">
    <div style="border-style: solid; border-radius: 10px">
      <div
        style="
          display: flex;
          justify-content: space-around;
          padding-top: 50px;
          margin-bottom: 80px;
          align-items: center;
        "
      >
        <h1 style="font-weight: bold; font-size: 70px">Forum</h1>
        <a
          class="btn btn-success"
          style="
            display: flex;
            justify-content: center;
            align-items: center;
            width: 250px;
            height: 50px;
          "
          href="/questions"
          >New Thread</a
        >
      </div>

      <!-- ? Perguntas no forum -->

      <% questions.forEach(question => { %>

      <div style="display: flex; justify-content: center; padding-bottom: 40px">
        <div
          style="
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            padding-bottom: 40px;
            border-bottom: solid;
            width: 70%;
          "
        >
          <div>
            <h1 style="font-weight: bold"><%= question.title %></h1>
          </div>

          <div style="display: flex; flex-direction: column">

            <div style="display: flex; flex-direction: row">
              <h5 style="color: #2d84ca; margin-right: 20px">details</h5>
              <h5>4 replies</h5>
            </div>

            <div style="display: flex; flex-direction: row;">
              <button class="btn btn-warning" style="margin-right: 15px; margin-left: 20px;">Editar</button>

              <form action="/question/delete" method="POST" style="display: inline;" onsubmit="confirmDelete(event, this)">
                <input type="hidden" name="id" value="<%= question.id %>" />
                <button class="btn btn-danger">Deletar</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</body>

<%- include ("./partials/footer.ejs") %>

<script>
  function confirmDelete(event, form){
      event.preventDefault();

      var decision = confirm("VocÃª quer deletar esta categoria?");

      if(decision){
        form.submit();
      }
  }
</script>
